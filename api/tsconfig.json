{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "typeRoots": ["src/typescript/@types", "node_modules/@types"]
  },
  "include": ["src"]
}
